<script>
    const categoryForm = document.getElementById('editBrandForm');

categoryForm.addEventListener('submit', (event) => {
  event.preventDefault(); // prevent the form from submitting normally
  
  Swal.fire({
    icon: 'warning',
    title: 'Are you sure?',
    text: 'Do you want to edit the brand?',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, edit it!'
  }).then((result) => {
    if (result.isConfirmed) {
      // User confirmed the action, submit the form
      editBrandForm.submit();
    }
  });
});

    // disappear brand added message
    setTimeout(function() {
        var alert = document.getElementById('edit-brand-success-alert');
        if (alert) {
            alert.style.display = 'none';
        }
    }, 5000);

    // disappear brand edit validation error messages
    // Select all the error alerts
    const errorAlerts = document.querySelectorAll('.brand-edit-validation-alert');
    // Loop through the error alerts
    errorAlerts.forEach(alert => {
    // Set a timeout of 5 seconds to remove the alert
    setTimeout(() => {
    alert.remove();
    }, 5000);
</script>