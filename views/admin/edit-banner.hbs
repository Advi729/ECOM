<section class="content-main justify-content-center">
 
    {{#if validationError}}
    {{#each validationError}}
    <div class="alert alert-danger product-validation-alert">
        {{this}}
    </div>
    {{/each}}
    {{!-- <p style="color: red;">{{validationError}}</p><br> --}}
    {{/if}}
            <form id="myEditForm" action="/admin/edit-banner/{{banner._id}}" method="POST" enctype="multipart/form-data">
            <div class="row">
              {{!-- <form action="/admin/add-product" method="POST" enctype="multipart/form-data"> --}}
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Banner</h2>
                        <div>
                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Publish</button>
                        </div>
                        {{!-- <div>
                            <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                            <button class="btn btn-md rounded font-sm hover-up">Publich</button>
                        </div> --}}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic details</h4>
                        </div>
                        <div class="card-body">
                            {{!-- <form action="/admin/add-product" method="POST" enctype="multipart/form-data"> --}}
                                <div class="mb-4">
                                    <label for="title" class="form-label">Name</label>
                                    <input type="text" value="{{banner.name}}" placeholder="Type here" name="name" class="form-control" id="title">
                                </div>

                                <div class="mb-4">
                                    <label for="title" class="form-label">Heading 1</label>
                                    <input type="text" value="{{banner.heading1}}" placeholder="Type here" name="heading1" class="form-control" id="title">
                                </div>

                                <div class="mb-4">
                                    <label for="title" class="form-label">Heading 2</label>
                                    <input type="text" value="{{banner.heading2}}" placeholder="Type here" name="heading2" class="form-control" id="title">
                                </div>

                                <div class="mb-4">
                                    <label for="title" class="form-label">Sub heading</label>
                                    <input type="text" value="{{banner.subHeading}}" placeholder="Type here" name="subHeading" class="form-control" id="title">
                                </div>
                                
                            {{!-- </form> --}}
                        </div>
                    </div> <!-- card end// -->

                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/uploads/banners/{{banner.image}}" alt="">
                                <input value="{{banner.image}}" type="file" name="image" single="" class="form-control">
                            </div>
                        </div>
                    </div> <!-- card end// -->
                     
                </div>




            </div>
            </form>
        </section> <!-- content-main end// -->


<script>


// swal for adding product
const myEditForm = document.getElementById('myEditForm');
myEditForm.addEventListener('submit', (event) => {
  event.preventDefault(); // prevent the form from submitting normally
  
  Swal.fire({
    icon: 'warning',
    title: 'Are you sure?',
    text: 'Do you want to publish this edited banner?',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes'
  }).then((result) => {
    if (result.isConfirmed) {
        Swal.fire({
            title: "Success!",
            text: "Banner edited successfully!",
            icon: "success",
            showConfirmButton: false,
        });
      // User confirmed the action, submit the form
      setTimeout(() => {
        myEditForm.submit();
      }, 2000);
    }
  });
});



// Select all the error alerts
const errorAlerts = document.querySelectorAll('.product-validation-alert');
// Loop through the error alerts
errorAlerts.forEach(alert => {
    // Set a timeout of 5 seconds to remove the alert
    setTimeout(() => {
    alert.remove();
    }, 5000);
});

</script>



