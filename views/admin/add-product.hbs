<script>
    const categorySelect = document.querySelector('.category');
const subCategorySelect = document.querySelector('.subCategory');

categorySelect.addEventListener('change', () => {
  // Get the selected category
  const selectedCategory = categorySelect.value;

  // Find the corresponding object in the categories array
  const selectedObject = categories.find(category => category.title === selectedCategory);

  // Clear the existing options in the subCategory select element
  subCategorySelect.innerHTML = '<option value="">Select a Sub category</option>';
  // Add new options for the selected subCategory array
  selectedObject.subCategory.forEach(subCategory => {
    const option = document.createElement('option');
    option.value = subCategory;
    option.textContent = subCategory;
    subCategorySelect.appendChild(option);
  });
});


// swal for adding product
const myForm = document.getElementById('myForm');
myForm.addEventListener('submit', (event) => {
  event.preventDefault(); // prevent the form from submitting normally
  
  Swal.fire({
    icon: 'warning',
    title: 'Are you sure?',
    text: 'Do you want to publish this content?',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, publish it!'
  }).then((result) => {
    if (result.isConfirmed) {
      // User confirmed the action, submit the form
      myForm.submit();
    }
  });
});


// Hide the success alert after 5 seconds
setTimeout(function() {
    var alert = document.getElementById('product-success-alert');
    if (alert) {
        alert.style.display = 'none';
    }
}, 5000);

// Select all the error alerts
const errorAlerts = document.querySelectorAll('.product-validation-alert');
// Loop through the error alerts
errorAlerts.forEach(alert => {
    // Set a timeout of 5 seconds to remove the alert
    setTimeout(() => {
    alert.remove();
    }, 5000);
});

</script>



