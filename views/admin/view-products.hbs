        <table class="table mt-5" id="productTable">
            <thead>
                <tr>
                    
                    <th scope="col">Title</th>
                    <th scope="col">Slug</th>
                    {{!-- <th scope="col">Description</th> --}}
                    <th scope="col">Price</th>
