                                    <a href="/admin/undelete-product/{{this.slug}}" class="btn btn-success">
                                        List
                                        {{!-- <i class="fa fa-ban" aria-hidden="true" style="margin-left:5px;"></i> --}}
                                    </a>
                                    {{else}}
                                    <a href="/admin/delete-product/{{this.slug}}" class="btn btn-danger text-white">
                                        Delete
                                        {{!-- <i class="fa fa-unlock" aria-hidden="true" style="margin-left:5px;"></i> --}}
                                    </a>
                                    {{/if}}
                                {{!-- </div> --}}
                    </td>
                    {{!-- {{/if}} --}}
                </tr>
                {{/each}}
            </tbody> 
        </table>
