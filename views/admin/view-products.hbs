            </thead>
            <tbody>
                {{#each allProducts}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.slug}}</td>
                    {{!-- <td>{{this.description}}</td> --}}
                    <td>â‚¹ {{this.price}}</td>
                    <td>{{this.category}}</td>
