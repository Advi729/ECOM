                    {{!-- {{#if admin}} --}}
                    <td>
                        <a href="/admin/edit-product/{{this.slug}}" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        {{!-- <a href="/admin/delete-product/{{this.slug}}" class="btn btn-danger">Delete</a> --}}
                        {{!-- <div class="col-lg-4 col-sm-4 col-4 col-action text-center "> --}}
