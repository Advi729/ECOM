{{!-- login form same as user login --}}

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Admin login
            </div>
        </div>
    </div>
    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div
                                class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h3 class="mb-30">Login</h3>
                                    </div>
                                    <form method="post" action="/admin/login">
                                        <div class="form-group">
                                            <input type="text" name="email" placeholder="Username or email" value="{{#if formData}}{{formData.email}}{{/if}}">
                                        </div>
                                        {{#if emailError}}
                                        <p style="color: red;">{{emailError}}</p><br>
                                        {{/if}}
                                        <div class="form-group">
                                            <input type="password" name="password" placeholder="Password" value="{{#if formData}}{{formData.password}}{{/if}}">
                                        </div>
                                        {{#if passwordError}}
                                        <p style="color: red;">{{passwordError}}</p><br>
                                        {{/if}}
                                        {{#if validationError}}
                                        <p style="color: red;">{{validationError}}</p><br>
                                        {{/if}}
                                        {{!-- <div class="login_footer form-group">
                                            <div class="text-muted text-center">Don't have an account? <a href="#">Sign
                                                    Up</a></div>

                                        </div> --}}
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-fill-out btn-block hover-up"
                                                name="login">Log in</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-1"></div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
