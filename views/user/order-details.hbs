<script>
    

    // swal to remove a product from cart
        function cancelOrderConfirmation(anchor) {
            const id = anchor.getAttribute('data-id');
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to cancel this order?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, cancel order!",
                cancelButtonText: "No",
            }).then((result) => {
                if (result.isConfirmed) {

                    setTimeout(() => {
                        $.ajax({
                        url:'/cancel-order/'+id,
                        method:'get',
                        success:(response) => {
                            if(response.status) {
                        
                            window.location.href = '/orders';

                            }
                        }
                    })
                    },2000);

                    // display a success message using SweetAlert2
                    Swal.fire({
                        title: "Success!",
                        text: "Order is cancelled.",
                        icon: "success",
                        showConfirmButton: false,
                    });
                }
            });
        }

// swal to return order
        function returnOrderConfirmation(anchor) {
            const orderId = anchor.getAttribute('data-id');
            console.log('orderid:', orderId)
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to return the order?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, return it!",
                cancelButtonText: "No, cancel",
            }).then((result) => {
                if (result.isConfirmed) {

                    setTimeout(() => {
                        $.ajax({
                        url:'/return-order/'+orderId,
                        method:'get',
                        success:(response) => {
                            if(response.status) {
                                window.location.href = '/orders';
                            }
                        }
                    })
                    },2000);

                    // display a success message using SweetAlert2
                    Swal.fire({
                        title: "Success!",
                        text: "Order's return initiated.",
                        icon: "success",
                        showConfirmButton: false,
                    });
                }
            });
        }

// download invoice
function invoiceOrderConfirmation(anchor) {
  const orderId = anchor.getAttribute('data-id');
//  const orderId = $(this).data('id');
    //const url = $(this).attr('href');
    
  // Add your confirmation logic here, if needed
  Swal.fire({
        title: "Are you sure?",
        text: "Do you want to download the invoice?",
        icon: "question",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, download it!",
        cancelButtonText: "No, cancel",
    }).then((result) => {
        if (result.isConfirmed) {
  
    $.ajax({
      url: '/invoice/'+orderId,
      type: 'GET',
      dataType: 'blob',
      success: (data) => {
        console.log('data:', data)
        const blob = new Blob([data], { type: 'application/pdf' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `invoice_${orderId}.pdf`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
      },
      error: (xhr, status, error) => {
        console.error(status, error);
      }
    });
 
         }
    })
}




</script>