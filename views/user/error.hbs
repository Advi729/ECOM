<title>Error {{ status }}</title>
  <link rel="icon" type="image/png" href="/assets-user/imgs/theme/heats_favicon.png" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* Add your custom styles here */
    .error-body {
      font-family: 'Montserrat', sans-serif;
      {{!-- background-image: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); --}}
      margin: 0;
      padding: 0;
    }
    .error-container {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
      margin: 50px auto;
      max-width: 600px;
      padding: 30px;
      text-align: center;
    }
    .h1-error {
      font-size: 72px;
      margin-bottom: 30px;
      color: #e94c3d;
      text-shadow: 0 0 10px rgba(233,76,61,0.2);
    }
    .p-error {
      font-size: 24px;
      margin-top: 0;
    }
    .a-error {
      color: #e94c3d;
      text-decoration: none;
      transition: all 0.2s ease-in-out;
    }
    .a-error:hover {
      color: #333;
    }
  </style>
</head>
<body class="error-body">
  <section class="pt-150 pb-150">
    <div class="error-container">
    <h1 class="h1-error">Error {{ status }}</h1>
    <p class="p-error">{{ message }}!</p>
    <br>
    <p class="p-error"><a class="a-error" href="/">Go back to homepage</a></p>
  </div>
  </section>
</body>